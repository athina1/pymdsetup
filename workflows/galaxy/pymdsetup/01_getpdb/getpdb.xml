<tool id="getpdb" name="Get pdb file" version="0.1.0">
    <description>Fetch pdb file from mmb api</description>
    <requirements>
        <!--        <requirement type="package" version="0.1">pymdsetup.mmb_api</requirement> -->
    </requirements>
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <command><![CDATA[
        python $__tool_directory__/getpdb.py $input $pdb_file
        ]]></command>
    <inputs>
        <param format="txt" name="input" type="data" label="Pdb code"/>
    </inputs>
    <outputs>
        <data format="pdb" name="pdb_file" label="${tool.name} pdb output file"/>
    </outputs>
    <tests>
        <test>
            <param name="input" value="2jq3"/>
            <output name="pdb_file" value="2jq3.pdb" compare="diff" lines_diff="0" ftype="pdb"/>
        </test>
    </tests>
    <help><![CDATA[
        Search for a pdb
    ]]></help>
    <citations>
    </citations>
</tool>

