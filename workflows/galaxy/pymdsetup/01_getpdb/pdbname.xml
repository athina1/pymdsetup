<tool id="pdbname" name="echo pdb name" version="0.1.0">
    <description>"Commodity step"</description>
    <requirements>
        <!--        <requirement type="package" version="0.1">pymdsetup.mmb_api</requirement> -->
    </requirements>
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <command><![CDATA[
        /bin/echo $name > $pdb_code
        ]]></command>
    <inputs>
        <param format="text" name="name" type="text" label="Pdb"/>
    </inputs>
    <outputs>
        <data format="txt" name="pdb_code" label="Pdb code"/>
    </outputs>
    <tests>
        <test>
            <param name="name" value="2jq3"/>
            <output name="pdb_code" value="2jq3" compare="diff" lines_diff="0"/>
        </test>
    </tests>
    <help><![CDATA[
        Search for a pdb
    ]]></help>
    <citations>
    </citations>
</tool>

