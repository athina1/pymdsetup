<tool id="getmutations" name="get collection of mutations" version="0.1.0">
    <description>Fetch uniprot variants from mmb api</description>
    <requirements>
        <!--        <requirement type="package" version="0.1">pymdsetup.mmb_api</requirement> -->
    </requirements>
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <command><![CDATA[
        python $__tool_directory__/getmutations.py $input $limit
        ]]></command>
    <inputs>
        <param format="txt" name="input" type="data" label="Pdb code"/>
        <param type="integer" name="limit" value="10" min="1">
            <label>Maximum number of mutations to analyze</label>
        </param>

    </inputs>
    <outputs>
        <collection type="list" name="mutations" label="Collection of mutations">
            <discover_datasets pattern="__designation_and_ext__" directory="output_getmutations"/>
        </collection>
    </outputs>
    <tests>
        <test>
            <param name="input" value="2jq3"/>
            <param name="limit" value="10"/>
            <param name="output_path" value="foobarbai"/>
            <output_collection name="mutations" type="list" count="2"/>
        </test>
    </tests>
    <help><![CDATA[
        Search for the uniprot mutations mapping the given pdb-code
    ]]></help>
    <citations>
    </citations>
</tool>

