<tool id="topology" name="create a topology for a pdb" version="0.1.0">
    <description>Create a topology using gromacs</description>
    <requirements>
    </requirements>
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <command><![CDATA[
        python $__tool_directory__/topology.py 
        $input1
        $watertype
        $forcefield
        $ignh
        $mut
        $__tool_directory__/gmx
        $out_topology
        $out_tarball
        $out_gro
        ]]></command>
    <inputs>
        <param format="pdb" name="input1" type="data" label="pdb input"/>
        <param format="txt" name="watertype" value="spce" type="text" label="water type parameter"/>
        <param format="txt" name="forcefield" value="oplsaa" type="text" label="forcefield used"/>
        <param format="txt" name="ignh" value="1" type="text" label="ignh"/>
        <param format="txt" name="mut" type="data" label="mutation"/>
    </inputs>
    <outputs>
        <data format="txt" name="out_gro" label="gromacs ready gro file"/>
        <data format="tar" name="out_tarball" label="tarball with topologies tar file"/>
        <data format="txt" name="out_topology" label="topology file top file"/>
    </outputs>
    <help><![CDATA[
        TODO
    ]]></help>
    <citations>
    </citations>
</tool>

