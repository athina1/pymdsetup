<tool id="ions" name="Neutralize charges" version="0.1.0">
    <description>Neutralize charges by adding ions</description>
    <requirements>
    </requirements>
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <command><![CDATA[
        python $__tool_directory__/fillions.py 
        $input1
        $output_gro
        $input2
        $output_top
        $output_tar
        $neutral
        $concentration
        $__tool_directory__/gmx
        ]]></command>
    <inputs>
        <param format="txt" name="input1" type="data" label="tpr input"/>
        <param format="tar" name="input2" type="data" label="top tarball input"/>
        <param format="txt" name="neutral" value="True" type="text" label="Algorithm"/>
        <param format="txt" name="concentration" value="0.05" type="text" label="Algorithm"/>
    </inputs>
    <outputs>
        <data format="txt" name="output_gro" label="gromacs gro file"/>
        <data format="txt" name="output_top" label="gromacs top file"/>
        <data format="tar" name="output_tar" label="gromacs top tarball"/>
    </outputs>
    <help><![CDATA[
        TODO
    ]]></help>
    <citations>
    </citations>
</tool>

